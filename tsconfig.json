{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "diagnostics": true,
        "downlevelIteration": false,
        "lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "pretty": true,
        "skipLibCheck": true,
        "target": "es6"
    },
    "include": [
        "src/watch"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test/typescript",
        "src/test"
    ]
}
